<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.View.EditarProduto"
             Title="Editar Produtos"
             BackgroundImage="Compras.png">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Descrição:" VerticalOptions="Center" HorizontalOptions="Center"   TextColor="Black" FontSize="Large" Padding="25"/>
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}"  VerticalOptions="Center" Margin="20" />

            <Label Text="Quantidade:" VerticalOptions="Center" HorizontalOptions="Center"   TextColor="Black" FontSize="Large" Padding="25"/>
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}"  VerticalOptions="Center" Margin="20"/>

            <Label Text="Preço:" VerticalOptions="Center" HorizontalOptions="Center"   TextColor="Black" FontSize="Large" Padding="25"/>
            <Entry x:Name="txt_preco" Text="{Binding Preco}"  VerticalOptions="Center" Margin="20"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>